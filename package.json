{
  "name": "blitz-docker",
  "version": "1.0.0",
  "scripts": {
    "dev": "blitz dev",
    "build": "blitz build",
    "start": "blitz start",
    "studio": "blitz prisma studio",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "prisma": {
    "schema": "db/schema.prisma"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged",
      "pre-push": "tsc && npm run lint && npm run test"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "prisma": "~2.22",
    "@prisma/client": "~2.22",
    "blitz": "0.35.0",
    "react": "0.0.0-experimental-3310209d0",
    "react-dom": "0.0.0-experimental-3310209d0",
    "react-error-boundary": "3.1.3",
    "typescript": "~4.2",
    "zod": "3.0.0",
    "final-form": "4.20.2",
    "react-final-form": "6.5.3"
  },
  "devDependencies": {
    "@types/react": "17.0.6",
    "@types/preview-email": "2.0.0",
    "eslint": "7.26.0",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "prettier": "2.3.0",
    "pretty-quick": "3.1.0",
    "preview-email": "3.0.4",
    "prettier-plugin-prisma": "0.9.1"
  },
  "private": true
}
